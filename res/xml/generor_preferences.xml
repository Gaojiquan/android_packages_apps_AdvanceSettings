    <PreferenceCategory android:title="@string/float_categery" >
        <CheckBoxPreference
            android:defaultValue="true"
            android:key="float_box_on_off"
            android:summaryOff="@string/float_categery_off"
            android:summaryOn="@string/float_categery_on"
            android:title="@string/float_categery_memory" />
        <CheckBoxPreference
            android:defaultValue="true"
            android:key="float_box_on_off_onboot"
            android:summaryOff="@string/float_categery_off_onboot"
            android:summaryOn="@string/float_categery_on_onboot"
            android:title="@string/float_categery_onboot_memory" />
    </PreferenceCategory>
    
    <PreferenceCategory android:title="@string/system_info_categery" >
        <PreferenceScreen
            android:key="system_status"
